<article data-id="{{itemId}}" class="activitystream-item1111">
    {{#with model.attributes}}
        <div class="as__detail">
            <a href="#Users/{{created_by}}/edit" class="as__icon">{{userPicture created_by}}</a>
            <div class="as__title">
                {{comment data.value data.tags}}
                    {{#if data.location}}
                        <span class="location">
                        {{icon "actions.map"}}
                        </span>
                    {{/if}}

            </div>
            <div class="as__info">
                <a href="#Users/{{created_by}}">{{str created_by_name}}</a> {{relativeTime date_entered}}
            </div>
        </div>
    {{/with}}
    {{partial "menu-list-item" this}}
</article>
