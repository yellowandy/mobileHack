<div class="box__edit {{#if isReadOnly}}box__edit_readonly{{/if}}">
    <div class="scroll">
        <div class="pad">
            {{#each addressFields}}
                {{field ../this}}
            {{/each}}

            {{#if enableGeoPlacemark}}
